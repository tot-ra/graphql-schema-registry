{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "app",
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "test/integration/*.test.ts"]
}
