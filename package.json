{
  "name": "graphql-schema-registry",
  "version": "3.0.1",
  "description": "Graphql schema registry",
  "main": "app/schema-registry.js",
  "type": "commonjs",
  "scripts": {
    "develop": "DB_HOST=localhost DB_PORT=6000 REDIS_HOST=localhost REDIS_PORT=6004 PORT=6001 ./node_modules/.bin/ts-node-dev --respawn src/schema-registry.ts --watch src --inspect",
    "test": "./node_modules/.bin/jest --config test/unit/jest.config.cjs",
    "coverage": "./node_modules/.bin/jest --config test/unit/jest.coverage.cjs && coveralls < coverage/lcov.info",
    "test-travis": "npm run test",
    "test-functional": "./node_modules/.bin/jest --config test/functional/jest.config.cjs",
    "format": "prettier --write '**/*.{js,jsx,json,md,yml,yaml,graphql}'",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md",
    "build": "npm run build-backend && npm run build-frontend",
    "build-backend": "rimraf app && mkdirp app && tsc",
    "build-frontend": "rimraf dist && mkdirp dist && webpack --env.production --bail --config webpack.config.cjs",
    "docker-compose-validate": "docker-comply compose --file ./docker-compose.deploy.yml",
    "migrate-db": "knex migrate:latest",
    "new-db-migration": "knex migrate:make --stub ./migrations/sql.stub rename_me",
    "list-db-migrations": "knex migrate:list"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipedrive/graphql-schema-registry.git"
  },
  "keywords": [
    "graphql"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@apollo/client": "3.5.8",
    "@apollo/federation": "0.34.0",
    "@graphql-inspector/core": "2.9.0",
    "@material-ui/core": "4.12.3",
    "@material-ui/icons": "4.11.2",
    "apollo-server-express": "2.25.3",
    "async-redis": "1.1.7",
    "body-parser": "1.19.1",
    "dataloader": "2.0.0",
    "date-fns": "2.28.0",
    "dotenv": "10.0.0",
    "express": "4.17.2",
    "graphql": "15.4.0",
    "graphql-voyager": "1.0.0-rc.31",
    "joi": "17.6.0",
    "kafkajs": "1.15.0",
    "knex": "0.20.2",
    "lodash": "4.17.21",
    "mysql2": "2.3.3",
    "object-hash": "2.2.0",
    "prismjs": "1.26.0",
    "react-diff-viewer": "3.1.1",
    "react-router-dom": "5.3.0",
    "styled-components": "5.3.3",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/jest": "^27.4.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-prismjs": "^1.1.1",
    "babel-plugin-styled-components": "^1.10.7",
    "chai": "^4.2.0",
    "changelog-verify": "^1.1.2",
    "commander": "^6.0.0",
    "coveralls": "^3.1.0",
    "css-loader": "^3.4.0",
    "eslint": "^6.6.0",
    "eslint-config-pipedrive": "^5.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "file-loader": "^5.0.2",
    "husky": "^4.2.5",
    "jest": "^27.4.7",
    "mini-css-extract-plugin": "^0.9.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "2.1.1",
    "prop-types": "^15.7.2",
    "proxyquire": "^2.1.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-hot-loader": "^4.12.18",
    "recursive-readdir": "^2.2.2",
    "request": "^2.88.0",
    "request-promise": "4.2.6",
    "request-promise-native": "^1.0.8",
    "sinon": "^8.0.1",
    "terser-webpack-plugin": "^2.3.8",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "uid": "0.0.2",
    "version-changelog": "^3.1.1",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  },
  "pre-push": [],
  "post-merge": []
}
